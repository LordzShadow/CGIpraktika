<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - Movies</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/autocomplete.css"/>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Movies" asp-action="Index">Movies</a>
                <div class="dropdown position-static my-2 my-lg-0">
                    <button class="btn btn-secondary dropdown-toggle my-2 my-lg-0" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Filters
                    </button>
                    <div class="dropdown-menu w-100 btn-group-toggle text-center" id="menu" aria-labelledby="dropdownMenu2" data-toggle="buttons">
                        <label class="btn btn-outline-success filter-btn">
                            <input type="checkbox" autocomplete="off" v-on:click="toggle('action')"> Action
                        </label>
                        <label class="btn btn-outline-success filter-btn">
                            <input type="checkbox" autocomplete="off" v-on:click="toggle('drama')"> Drama
                        </label>
                        <label class="btn btn-outline-success filter-btn">
                            <input type="checkbox" autocomplete="off" v-on:click="toggle('comedy')"> Comedy
                        </label>
                        <label class="btn btn-outline-success filter-btn">
                            <input type="checkbox" autocomplete="off" v-on:click="toggle('romance')"> Romance
                        </label>
                        <label class="btn btn-outline-success filter-btn">
                            <input type="checkbox" autocomplete="off" v-on:click="toggle('crime')"> Crime
                        </label>
                    </div>
                </div>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                
                    <form class="form-inline my-2 my-lg-0" id="searchbar">
                        <autocomplete class="mr-sm-2"
                            :search="auto"
                            placeholder="Search for a movie"
                            aria-label="Search for a movie"
                            :get-result-value="getResultValue"
                            id="search_in"
                        ></autocomplete>
                        <button class="btn btn-outline-success my-2 my-sm-0" type="button" id="search" v-on:click="search">Search</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Movies
        </div>
    </footer>

    <script src="~/js/autocomplete.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/vue"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
